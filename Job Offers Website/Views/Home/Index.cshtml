@model IEnumerable<Job_Offers_Website.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h3>مرحبا بك عزيزى الزائر</h3>
    <p class="lead">مرحبا بك فى فضاء البحث عن الوظائف باختلاف اصنافها يمكنك نشر وظيفة ان كنت ناشر ويمكنك التقدم لوظيفه اذا كنت باحثا</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">المزيدمن التفاصيل &raquo;</a></p>
</div>



@foreach (var item in Model)
{
    <div class="panel panel-default" style="padding:30px">
        <h1 class="panel-heading">@Html.DisplayFor(modelItem => item.CategoryName)</h1>
        <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>
        <div class="row">
            @foreach (var subItem in item.Jobs)
            {


                <div class="col-md-3 thumbnail" style="margin-left:20px;margin-bottom:30px;height:380px;">
                    <img src="~/Uploads//@subItem.JobImage" />
                    <h3>@Html.DisplayFor(modelItem => subItem.JObTitle)</h3>
                    <h5>@Html.DisplayFor(modelItem => subItem.JobContent)</h5>
                    <button class="btn btn-default">التفاصيل</button>
                </div>


            }
        </div>
    </div>
}


