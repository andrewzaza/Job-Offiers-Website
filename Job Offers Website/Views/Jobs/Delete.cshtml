@model Job_Offers_Website.Models.Job

@{
    ViewBag.Title = "الحذف";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>حذف الوظيفة</h2>

<h3>هل انت متاكد من حذف هذا النوع ؟</h3>
<div>
    <h4>وظيفة</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JObTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JObTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.JobContent).ToString()))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd>
            <img src="~/Uploads//@Html.DisplayFor(model=>model.JobImage)"
                 class="thumbnail" style="width:48px;height:48px;" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-danger" /> |
            @Html.ActionLink("العودة الى القائمة", "Index")
        </div>
    }
</div>
